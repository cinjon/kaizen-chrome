{
  "manifest_version": 2,

  "name": "Kaizen",
  "description": "Change for the Better",
  "version": "2.2",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "16":  "k_icon16.gif",
    "48":  "k_icon48.gif",
    "128": "k_icon128.gif",
    "f16": "k_16_flash.gif"
  },
  "browser_action": {
    "default_icon": "k_icon16.gif",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://www.seekaizen.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentscript.js"]
    }
  ]
}