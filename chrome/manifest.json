{
  "manifest_version": 2,

  "name": "Kaizen",
  "description": "Change for the Better",
  "version": "2.3",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "16":  "kaizenIcon16.png",
    "48":  "kaizenIcon48.png",
    "128": "kaizenIcon128.png"
  },
  "browser_action": {
    "default_icon": "kaizenIcon16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://www.seekaizen.com/*",
    "http://0.0.0.0:5000/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentscript.js"]
    }
  ]
}